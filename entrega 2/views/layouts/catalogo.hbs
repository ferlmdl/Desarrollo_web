<div class="container">
    <div class="row">
        {{#each productos}}
            <div class="col">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">Precio: {{this.precio}} - Stock: {{this.stock}}</p>
                      <a href="/catalogo/{{this._id}}" class="btn btn-primary">Ver</a>
                      <button onclick="agregarProducto('{{this._id}}')" class="btn btn-primary">Agregar</button>
                       <button onclick="eliminarDelCarrito('{{this._id}}')" class="btn btn-danger">Eliminar</button>
                  </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>